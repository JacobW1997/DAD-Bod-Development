@*@model GameAndHang.Models.Event*@
@model IEnumerable<GameAndHang.Models.Event>


@{
    ViewBag.Title = "Search";
}

<h2>Search for an event by game title</h2>
@using(Html.BeginForm("Search", "Events", FormMethod.Get))
{
    @Html.TextBox("search")<input type="submit" value="Game" />
}

<table class="table table-striped">
    <thead>
        @*<tr>
            <th>Event Name</th>
            <th>Event Date</th>
            <th>Event Game</th>
            <th>Details</th>
        </tr>*@
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr>
                <td style="color: red;"> No event found</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.EventName</td>
                    <td>@item.Date</td>
                    <td>@item.UnsupGames</td>
                    <td>@Html.ActionLink("Details", "Details", new { id = item.ID })</td>
                </tr>
            }
        }
    </tbody>
</table>
