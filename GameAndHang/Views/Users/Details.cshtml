@model GameAndHang.Models.User

@{
    ViewBag.Title = "Details";
}

<h2 id="title">Account Details</h2>

<div class="container-lg">
    <hr />
    <div class="row">

        <img src="https://cdn.discordapp.com/attachments/664532703064096797/682074680122933318/ChewyProfPic.jpeg" id="profPic" />

        <div id="nameDiv" class="text-left">
            <h2> @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
            <div id="accountInfo">
                @Html.DisplayFor(model => model.AspNetUser.Email)

            </div>
            <div id="accountInfo">
                @Html.DisplayFor(model => model.DOB)
            </div>
            <div id="accountBio">
                this is my bio holder
            </div>
        </div>
    </div>
    <div class="col-md-3">

    </div>

</div>

@if (Model.EventPlayers.Count() > 0) { 
    <hr/>

    <h4>Events that @Html.DisplayFor(model => model.FirstName) is Signed Up For:</h4>

    <br/>

    <div>
        <table class="table-hover">
            <tr>
                <th>
                    Event Name
                </th>

                <th>
                    Event Date/Time
                </th>

                <th>
                    Event Location
                </th>

                <th>
                    Event Description
                </th>

                <th>

                </th>
            </tr>

            @foreach (var eventPlayer in Model.EventPlayers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(e => eventPlayer.Event.EventName)
                    </td>

                    <td>
                        @Html.DisplayFor(e => eventPlayer.Event.Date)
                    </td>

                    <td>
                        @Html.DisplayFor(e => eventPlayer.Event.EventLocation)
                    </td>

                    <td>
                        @Html.DisplayFor(e => eventPlayer.Event.EventDescription)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = eventPlayer.EventID })
                    </td>
                </tr>
            }
            
        </table>
</div>
}
<style>
    #profPic {
        min-width: 50px;
        max-width: 250px;
        min-height: 50px;
        max-height: 250px;
        border-radius: 5%;
        border-style:double;
        border-width:5px;
        margin-top:20px;
        margin-right:10px;
    }
    #nameDiv{
        margin-top:30px;
        margin-left:5px;
    }
    #title{
        margin-top:10px;
    }
    #accountInfo{
        font-size: 20px;
    }
    #accountBio{
        margin-left:inherit;
        margin-top:10px;
        width:650px;
        height:125px;
        border-style:solid;
        border-width:1px;
    }

</style>
<p>
    <div class="btn btn-primary">
        @Html.ActionLink("Edit", "Edit", new { id = Model.ID })
    </div>
</p>
