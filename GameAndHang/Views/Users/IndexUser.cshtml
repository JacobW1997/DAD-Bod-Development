@model GameAndHang.Models.User
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "IndexUser";
}

    <div class="container-xl" id="Profile">

        <div class="row" id="ProfileInfo">

            <img src="https://cdn.discordapp.com/attachments/664532703064096797/682074680122933318/ChewyProfPic.jpeg" id="profPic" />

            <div id="nameDiv" class="text-left">
                <h1> @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h1>
                <div id="accountInfo">
                    <h4 style="margin-left:5px"> @Html.DisplayFor(model => model.AspNetUser.Email)</h4>
                </div>
                <div id="accountBio">
                    <h4> "@Html.DisplayFor(model => model.Bio)"</h4>
                </div>
                <div id="editProfile" style="color: Highlight">
                    @Html.ActionLink("Edit Account Info", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-4" id="FriendsList">
                <h4>     Friends List: </h4>
                <ul class="list-group">
                    <li class="list-group-item">Friend slot 1</li>
                    <li class="list-group-item">Friend slot 2</li>
                    <li class="list-group-item">Friend slot 3</li>
                    <li class="list-group-item">Friend slot 4</li>
                    <li class="list-group-item">Friend slot 5</li>
                </ul>
            </div>
            <div class="col-lg-4" id="FriendsList">
                <h4>     Registered Events: </h4>
                <ul class="list-group">
                    <li class="list-group-item">Event slot 1</li>
                    <li class="list-group-item">Event slot 2</li>
                    <li class="list-group-item">Event slot 3</li>
                    <li class="list-group-item">Event slot 4</li>
                    <li class="list-group-item">Event slot 5</li>
                </ul>

            </div>
            <div class="col-lg-4" id="FriendsList">
                <h4>     Hosted Games: </h4>
                <ul class="list-group">
                    <li class="list-group-item">Host slot 1</li>
                    <li class="list-group-item">Host slot 2</li>
                    <li class="list-group-item">Host slot 3</li>
                    <li class="list-group-item">Host slot 4</li>
                    <li class="list-group-item">Host slot 5</li>
                </ul>
            </div>
        </div>
    </div>

<style>
    #ProfileInfo{
        margin-left:25px;
    }
    #editProfile{
        margin-left:5px;
    }

    body {
        background-color: #93B7BE
    }

    #profPic {
        min-width: 50px;
        max-width: 250px;
        min-height: 50px;
        max-height: 250px;
        border-radius: 5%;
        border-style: double;
        border-width: 5px;
        margin-top: 20px;
        margin-right: 10px;
    }

    #FriendsList {

     margin-top:10px;
    }

    .list-group-item {
        background-color: #08415C
    }

    #Profile {
    }

    .body-content {
        padding-left: 15px;
        padding-right: 15px;
        color: black;
    }

    #nameDiv {
        margin-top: 30px;
        margin-left: 5px;
    }

    #title {
        margin-top: 10px;
    }

    #accountInfo {
        font-size: 20px;
    }

    #accountBio {
        margin-top: 5px;
    }
</style>




